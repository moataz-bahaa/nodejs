<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <%- include('../includes/styles.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <%- include('../includes/navbar.ejs') %>
    <main>
      <form
        class="product-form"
        action="/admin/<%= editMode ? 'edit-product' : 'add-product' %>"
        method="POST"
      >
        <div class="form-control">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            value="<%= editMode ? product.title : '' %>"
          />
        </div>
        <div class="form-control">
          <label for="imageUrl">Image URL</label>
          <input
            type="text"
            name="imageUrl"
            id="imageUrl"
            value="<%= editMode ? product.imageUrl : '' %>"
          />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input
            type="number"
            name="price"
            id="price"
            step="0.01"
            value="<%= editMode ? product.price : '' %>"
          />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="5">
<%= editMode ? product.description : '' %></textarea
          >
        </div>
        <% if (editMode) { %>
        <input type="hidden" name="id" value="<%= product._id %>" />
        <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button class="btn" type="submit">
          <%= editMode ? 'Save Changes' : 'Add Product' %>
        </button>
      </form>
    </main>
    <%- include('../includes/scripts.ejs') %>
  </body>
</html>
